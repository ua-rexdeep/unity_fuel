{
    "compilerOptions": {
      "module": "ESNext",
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "esnext",
      "sourceMap": false,
      "outDir": "./dist",
      "baseUrl": "src",
      "incremental": true,
      "skipLibCheck": true,
      "types": ["@citizenfx/server", "@citizenfx/client", "node"],
      "paths": {
        "@/*": ["./"]
      }
    },
    "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
  }